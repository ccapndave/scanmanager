{% extends '@DKCore/base.html.twig' %}

{% block content -%}
    <h1>Scan list</h1>

    <table class="scans-list table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Tags</th>
            <th>Filename</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{% if entity.date %}{{ entity.date|date('d-m-Y') }}{% endif %}</td>
                <td>{{ entity.tags | join(', ') }}</td>
                <td><a href="{{ path('scan_show', { 'id': entity.id }) }}">{{ entity.filename }}</a></td>
                <td>
                    <ul class="actions">
                        <li>
                            <a class="btn btn-default" href="{{ path('scan_show', { 'id': entity.id }) }}">Show</a>
                        </li>
                        <li>
                            <a class="btn btn-default" href="{{ path('scan_edit', { 'id': entity.id }) }}">Edit</a>
                        </li>
                        <li>
                            <!--<a class="btn btn-default" href="{{ path('scan_delete', { 'id': entity.id }) }}" onclick="return confirm('Are you sure you want to delete this scan?')">Delete</a>-->
                            {{ form_widget(deleteForms[entity.id]) }}
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
